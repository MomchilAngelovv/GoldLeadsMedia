@model GoldLeadsMedia.Web.Models.ViewModels.ManagersConfirmedLeadsViewModel

<table class="table table-striped table-sm">
    <tr class="row-header">
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>PhoneNumber</th>
        <th>Country</th>
        <th>Offer</th>
        <th>Approved on</th>
        <th></th>
    </tr>
    <tbody class="table-tbody">

        @foreach (var data in Model.ConfirmedLeads)
        {
            <tr class="table-row clickable-table-row">
                <td>
                    @data.FirstName
                </td>
                <td>
                    @data.LastName
                </td>
                <td>
                    @data.Email
                </td>
                <td>
                    @data.PhoneNumber
                </td>
                <td>
                    @data.CountryName
                </td>
                <td>
                    @data.OfferName
                </td>
                <td>
                    @data.ApprovedOn
                </td>
                <td class="d-flex justify-content-center">
                    <input type="checkbox" name="id" value="@data.Id">
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="partnerContainer">
    <div>
        Choose a partner
    </div>

    @foreach (var part in Model.Partners)
    {
        <label><input type="radio" name="partner" value="@part.Id"> @part.Name</label>
    }

</div>
<div style="right:30px">
    <button class="btn btn-primary" id="submitLeadsToPartner">Send</button>
</div>

@section Scripts
{
    <script src="~/Content/js/leads/confirmed_leads.js"></script>
}

