@model GoldLeadsMedia.Web.Models.ViewModels.OffersDetailsViewModel

<div class="row">
    <div class="col-12 col-sm-6">
        <h2 class="block-title">
            @Model.Name
        </h2>
    </div>
</div>
<div class="row">
    <div class="col-12 col-sm-6">
        <div class="text-box">
            <p>@Model.Description</p>
        </div>
    </div>
    <div class="col-12 col-sm-6">
        <img class="img-fluid" src="@Model.ImageUrl" alt="Offer profile picture" />
    </div>
</div>
<div class="row">
    <div class="col-12 col-md-12 col-sm-6">
        <div class="lead-wrap">
            <div class="lead">
                <div class="lead-label">
                    Number
                </div>
                <div class="lead-details">
                    @Model.Number
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Payout
                </div>
                <div class="lead-details">
                    @Model.PayOut
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Pay per click
                </div>
                <div class="lead-details">
                    @Model.PayPerClick
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Pay type
                </div>
                <div class="lead-details">
                    @Model.PayType
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Language
                </div>
                <div class="lead-details">
                    @Model.Language
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Country
                </div>
                <div class="lead-details">
                    @Model.Country
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Vertical
                </div>
                <div class="lead-details">
                    @Model.Vertical
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Device
                </div>
                <div class="lead-details">
                    @Model.Device
                </div>
            </div>
            <div class="lead">
                <div class="lead-label">
                    Access
                </div>
                <div class="lead-details">
                    @Model.Access
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.IsVip == false)
{
    <div class="mt-2">
        <h2 class="text-center text-danger">This offer is only for VIP. Please, contact your affiliate manager.</h2>
    </div>
}
else
{
    <div class="row">
        <div class="tracker-wrap col-12 col-md-12 col-sm-6">
            <div class="tracker-label">
                <h3 class="yellow-tittle">
                    Tracking
                </h3>
            </div>
            <div class="tracker-actions">
                <a class="copyLink" style="cursor:pointer">
                    <i class="mdi mdi-link-box-variant copyLink" title="Copy link"></i>
                </a>
                <a href="#" class="openNewTab" style="cursor:pointer">
                    <i class="mdi mdi-login-variant openNewTab" title="Open page in new tab"></i>
                </a>
            </div>
            <div class="tracker-link">
                <p id="tracking-url">@Model.RedirectUrl</p>
            </div>
            <div class="tracker-help">
                <small>Tracking and iFrame form URLs update automatically</small>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-sm-4">
            <div class="url-builder-wrap">
                <h3 class="yellow-tittle">URL Builder</h3>
                <h4>Landings:</h4>  
                @foreach (var landingPage in Model.LandingPages)
                {
                    <div class="url clickable-table-row landing-page-info" data-landing-page-id="@landingPage.Id">
                        <div class="row">
                            <div class="col-8">
                                <p>@landingPage.Name</p>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-12 col-sm-8">
            <div class="pixel-form-wrap">
                <h3 class="yellow-tittle">Postback</h3>
                <form>
                    <div class="form-group">
                        <label for="inputPostBackUrl">Postback URL</label>
                        <input type="text" class="form-control" id="inputPostBackUrl" placeholder="Enter your tracker postback url." value="@Model.PostbackUrl">
                    </div>
                    <div class="row">
                        <div class="col-12 ">

                        </div>

                        <div class="col-12 result-msg" style="display:none;">
                            <span>Successfully saved data.</span>
                        </div>
                        <input type="hidden" id="hidden-id" value="@Model.Id" />
                        <div class="col-4">
                            <button type="button" id="save-tracking" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}


@section Scripts
{
    <script src="~/js/offers/details.js"></script>
}
