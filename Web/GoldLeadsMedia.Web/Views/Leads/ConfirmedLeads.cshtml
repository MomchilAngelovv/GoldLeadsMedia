@model GoldLeadsMedia.Web.Models.Leads.ConfirmedLeadsViewModel

@{
    ViewData["PageTitle"] = "Send leads to partners";
}

@if (TempData["ConfirmLeads"] != null)
{
    if (TempData["ConfirmLeadsType"].ToString() == "1")
    {
        <div class="succMsg">
            @TempData["ConfirmLeads"]
        </div>
    }
    else
    {
        <div class="errMsg">
            @TempData["ConfirmLeads"]
        </div>
    }
}

<div class="col-12">
    <div class="row">
        <table class="table table-striped table-sm">
            <colgroup _ngcontent-ivo-c5="" class="ng-star-inserted">
                @*<col style="width:150px">*@
                <col style="width:150px">
                <col style="width:80px">
                <col style="width:80px">
                <col style="width:80px">
                <col style="width:80px">
                <col style="width:80px">
                <col style="width:80px">
                <col style="width:80px">
            </colgroup>
            <tr class="row-header">
                @*<th>Id</th>*@
                <th>Username</th>
                <th>Names</th>
                <th>Email</th>
                <th>PhoneNumber</th>
                <th>Country</th>
                <th>Offer Name</th>
                <th>Datetime</th>
                <th></th>
            </tr>
            <tbody class="table-tbody">

                @foreach (var data in Model.Leads)
                {
                    <tr class="table-row clickble-table-row">
                        @*<td>
                                @data.Id
                            </td>*@
                        <td>
                            @data.UserName
                        </td>
                        <td>
                            @data.
                        </td>
                        <td>
                            @data.Email
                        </td>
                        <td>
                            @data.PhoneNumber
                        </td>
                        <td>
                            @data.Country
                        </td>
                        <td>
                            @data.Offer
                        </td>
                        <td>
                            @data.CreatedOn.ToString("MM.dd.yyyy HH:mm")
                        </td>
                        <td class="d-flex justify-content-center">
                            <input type="checkbox" name="id" value="@data.Id">
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>
<div class="partnerContainer">
    <div>
        Choose a partner
    </div>

    @foreach (var part in Model.Partners)
    {
        <label><input type="radio" name="partner" value="@part.Id"> @part.Name</label>
    }

</div>
<div style="right:30px">
    <button class="btn btn-primary" id="submitLeadsToPartner">Send</button>
</div>

@section Scripts
{
    <script src="~/Content/js/leads/confirmed_leads.js"></script>
}

