<div id="carouselIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselIndicators" data-slide-to="1"></li>
        <li data-target="#carouselIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="img-fluid" src="~/images/slider/photo1.jpeg" alt="Some random text1">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src="~/images/slider/photo2.jpeg" alt="Some random text2">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src="~/images/slider/photo3.jpeg" alt="Some random text3">
            <div class="carousel-caption d-none d-md-block">
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<section class="main-products">
    <div class="product-tabs-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="nav nav-pills nav-justified">
                        @foreach (var offerGroup in Model.OfferGroups)
                        {
                            <a data-toggle="tab" class="nav-item @(offerGroup.IsFirst == true ? "active" : null) nav-link group-filter" data-group-id="@offerGroup.Id" href="#">@offerGroup.Name</a>
                        }
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="product-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="tab-content">
                        <!-- First tab content markup -->
                        <div id="{{ANCHOR_LINK}}" class="tab-pane fade active show">
                            <div id="offers-group-list" class="row">
                                @*@{Html.RenderAction("GetOffersByGroup", "Offer", new { group_Id = 1 });}*@

                                @foreach (var offer in Model.Offers)
                                {
                                    <div class="col-12 col-sm-3">
                                        <div class="product">
                                            <a href="/Offer/Details?id=@offer.Id"><img class="img-fluid" src="@offer.ImageUrl" alt=""></a>
                                            <div class="product-caption">
                                                <h3>@offer.Name</h3>
                                                <div class="row product-action">
                                                    <div class="col-4">
                                                        <div class="money-circle">
                                                            @offer.PayOut
                                                            <p>$</p>
                                                        </div>
                                                    </div>
                                                    <div class="col-8">
                                                        <div class="product-id">@offer.Id</div>
                                                        <div class="action">@offer.PayType</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }


