@model GoldLeadsMedia.Web.Models.ViewModels.BrokersAllViewModel

<h1>All brokers</h1>
<hr />
<div class="accordion" id="accordionExample">
    @foreach (var broker in Model.Brokers)
    {
        <div class="card">
            <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#@broker.Id" aria-expanded="false" aria-controls="collapseTwo">
                        @broker.Name
                    </button>
                </h5>
            </div>
            <div id="@broker.Id" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                <div class="card-body">
                    Total leads: @broker.TotalLeads <br />
                    Total ftds : @broker.TotalFtds
                </div>
                <div class="card-body">
                    <a asp-controller="Brokers" asp-action="Details" asp-route-id="@broker.Id" class="btn btn-sm btn-info">More details</a>
                </div>
            </div>
        </div>
    }
</div>